<div id="sideBubble">
  <h3 class="withTip">Not the widget you were looking for?</h3>
  <span class="tipText">choose another for <%= titled_name_for @legislator %></span>
  <ul id="sideNav">
    <% @widgets.each do |slug, widget| %>
      <li>
        <a href="<%= widget_path :id => slug, :legislator => (@legislator ? id_for(@legislator) : settings[:featured][:legislator]) %>"><%= widget[:name] %></a>
      </li>
    <% end %>
    <li>
      <a href="<%= legislator_path :id => id_for(@legislator) %>">View all widgets</a>
    </li>
  </ul>
</div>