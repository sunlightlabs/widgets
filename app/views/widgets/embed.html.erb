<%
  # The point of having this nearly empty embed view is to allow individual widget embed partials to use content_for to inject content in the embed layout.
%>

<% content_for :head do %>
  <%= stylesheet_link_tag "widgets/#{params[:id]}" %>
<% end %>

<% content_for :body_class, "#{params[:id]}_#{params[:size]} #{params[:size]}" %>

<%= render "widgets/embed/#{params[:id]}" %>