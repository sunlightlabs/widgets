  <script type="text/javascript">
    var bioguide_id = "<%= params[:bioguide_id] %>";
    var data_endpoint = "<%= settings[:data_endpoint] %>";
    var sunlight_api_key = "<%= settings[:sunlight_api_key] %>";
    var size = "<%= @size %>";
    
    function decimal_format(num, places) {
      if (Math.floor(num) == num) {
        return num;
      } else {
        return Highcharts.numberFormat(num, places);
      }
    }
  </script>
  <%= javascript_include_tag 'widget' %>
  
  <%= stylesheet_link_tag 'widget.css' %>
  <%= stylesheet_link_tag "#{params[:id]}.css" %>
</head>

